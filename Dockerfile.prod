# Stage 1: Build
FROM golang:1.23 AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o main .

# Stage 2: Run
FROM alpine:3.19

WORKDIR /app
COPY --from=builder /app/main .
COPY config.example.yaml ./config.yaml

ENV PORT=3004
EXPOSE 3004

CMD ["./main"]